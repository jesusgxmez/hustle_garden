                    <GradientStop Color="#E8F5E9" Offset="0.0"/>
                    <GradientStop Color="#F1F8E9" Offset="1.0"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
        
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <HorizontalStackLayout Spacing="12">
                    <Label Text="ðŸ“Š" FontSize="32" VerticalOptions="Center"/>
