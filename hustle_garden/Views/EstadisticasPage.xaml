                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeShape="RoundRectangle 15" 
                                            Margin="0,6"
                                            StrokeThickness="0"
                                            Padding="20">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FFF3E0" Offset="0.0"/>
                                                <GradientStop Color="#FFE0B2" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Shadow>
                                            <Shadow Brush="#FF9800" Offset="0,3" Radius="8" Opacity="0.15"/>
                                        </Border.Shadow>
                                        
                                        <VerticalStackLayout Spacing="8">
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="ðŸŒ±" FontSize="24"/>
                                                <Label Text="{Binding NombrePlanta}" 
                                                       FontSize="20" 
                                                       FontAttributes="Bold"
                                                       TextColor="#E65100"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                            
                                            <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                                                <Border Grid.Column="0"
                                                        StrokeShape="RoundRectangle 10"
                                                        Padding="12,8"
                                                        BackgroundColor="#FF9800"
                                                        StrokeThickness="0">
                                                    <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
                                                        <Label Text="âš–ï¸" FontSize="16"/>
                                                        <Label Text="{Binding TotalKg, StringFormat='{0:F2} kg'}" 
                                                               TextColor="White" 
                                                               FontSize="15"
                                                               FontAttributes="Bold"/>
                                                    </HorizontalStackLayout>
                                                </Border>
                                                
                                                <Border Grid.Column="1"
                                                        StrokeShape="RoundRectangle 10"
                                                        Padding="12,8"
                                                        BackgroundColor="#FFA726"
                                                        StrokeThickness="0">
                                                    <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
                                                        <Label Text="ðŸŒ½" FontSize="16"/>
                                                        <Label Text="{Binding NumeroCosechas}" 
                                                               TextColor="White" 
                                                               FontSize="15"
                                                               FontAttributes="Bold"/>
                                                    </HorizontalStackLayout>
                                                </Border>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <Border StrokeShape="RoundRectangle 18" 
                        StrokeThickness="0"
                        Margin="0,10,0,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1B5E20" Offset="0.0"/>
                            <GradientStop Color="#2E7D32" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Shadow>
                        <Shadow Brush="#1B5E20" Offset="0,6" Radius="12" Opacity="0.3"/>
                    </Border.Shadow>
                    <Button Text="ðŸ”„ Refrescar Datos" 
                            Command="{Binding RefrescarCommand}"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="17"
                            Padding="0,14"/>
