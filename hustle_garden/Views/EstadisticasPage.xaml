                </HorizontalStackLayout>

                <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto, Auto" ColumnSpacing="15" RowSpacing="15">

                    <!-- Total Plantas -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            StrokeShape="RoundRectangle 20"
                            StrokeThickness="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2E7D32" Offset="0.0"/>
                                <GradientStop Color="#4CAF50" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Shadow>
                            <Shadow Brush="#2E7D32" Offset="0,6" Radius="16" Opacity="0.3"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="8" Padding="20">
                            <Label Text="ðŸŒ±" FontSize="32" HorizontalOptions="Center"/>
                            <Label Text="{Binding TotalPlantas}" 
