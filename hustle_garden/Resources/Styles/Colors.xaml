<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Paleta de colores del Huerto Digital -->
    
    <!-- Verdes principales (tema de plantas y naturaleza) -->
    <Color x:Key="Primary">#4CAF50</Color>
    <Color x:Key="PrimaryDark">#1B5E20</Color>
    <Color x:Key="PrimaryLight">#81C784</Color>
    <Color x:Key="PrimaryExtraLight">#C8E6C9</Color>
    
    <!-- Colores secundarios -->
    <Color x:Key="Secondary">#FF9800</Color>
    <Color x:Key="SecondaryDark">#E65100</Color>
    <Color x:Key="SecondaryLight">#FFB74D</Color>
    
    <!-- Colores de acento -->
    <Color x:Key="Accent">#9C27B0</Color>
    <Color x:Key="AccentDark">#6A1B9A</Color>
    <Color x:Key="AccentLight">#AB47BC</Color>
    
    <!-- Colores de agua/riego -->
    <Color x:Key="Water">#03A9F4</Color>
    <Color x:Key="WaterDark">#0277BD</Color>
    <Color x:Key="WaterLight">#4FC3F7</Color>
    
    <!-- Colores de alerta -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#E53935</Color>
    <Color x:Key="Info">#2196F3</Color>
    
    <!-- Fondos y superficies -->
    <Color x:Key="Background">#F5F5F5</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceLight">#FAFAFA</Color>
    <Color x:Key="BackgroundGreen">#E8F5E9</Color>
    <Color x:Key="BackgroundYellow">#F1F8E9</Color>
    
    <!-- Colores de texto -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextHint">#9E9E9E</Color>
    <Color x:Key="TextLight">#FFFFFF</Color>
    
    <!-- Neutrales -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>
    
    <!-- Grises -->
    <Color x:Key="Gray50">#FAFAFA</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#1A1A1A</Color>
    
    <!-- Colores adicionales para temas -->
    <Color x:Key="OffBlack">#1C1C1E</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="Magenta">#FF00FF</Color>
    <Color x:Key="PrimaryDarkText">#E8F5E9</Color>
    <Color x:Key="SecondaryDarkText">#B0BEC5</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    
    <!-- Gradientes comunes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="0.0"/>
        <GradientStop Color="{StaticResource Primary}" Offset="0.5"/>
        <GradientStop Color="{StaticResource PrimaryLight}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource SecondaryDark}" Offset="0.0"/>
        <GradientStop Color="{StaticResource Secondary}" Offset="0.5"/>
        <GradientStop Color="{StaticResource SecondaryLight}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BackgroundGreen}" Offset="0.0"/>
        <GradientStop Color="{StaticResource BackgroundYellow}" Offset="1.0"/>
    </LinearGradientBrush>
</ResourceDictionary>